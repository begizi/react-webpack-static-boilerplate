.contact-form
  @import _form
  position: relative
  background: mojo-green

  .body-content
    max-width: 100%
    background: mojo-green

  .content
    background: mojo-green

  &:after
    content: ''
    width: 100%
    height: 3000px
    position: fixed
    background: mojo-green
    z-index: -1

  .general-contact
    margin-top: 45px
    border: none
    font-size: 12px
    color: rgba(white, .8)
    transition: color .3s ease

    &:hover
      color: #fff
