// font families
primary-sans = 'AltisMedium'
primary-serif = 'MetaSerifOT-Book'
handwriting = 'FeltTip'

// font sizes
font-size-base = 20px
line-height-base = 32px

// colors
mojo-green = #28ba00
med-gray = #555
light-gray = #efefef
alert = #c84e4e
uw-primary = #6a68f8

// widths
max-width = 1400px
small-col-width = 400px
center-col-width = 600px
waistband-width = 1000px

// heights
header-height = 60px
hero-space = 260px
hero-space-med = 210px
browser-height= 20px
next-up-height= 340px
next-up-height-small= 240px

// spacing
spacing-block-small = 10px
spacing-block = 20px
spacing-block-large = 100px

// horizontal breakpoints
med-screen-landscape = 1024px
med-screen-portrait = 768px
small-screen = 600px

// vertical breakpoints
med-screen-vert = 800px


// grid
gutter = 20px

col-1-4 = 25%
col-1-3 = 33.333333%
col-2-3 = 66.666666%
col-1-2 = 50%
col-3-4 = 75%

// transitions
cubic-bezier = all 300ms cubic-bezier(0.68, -0.55, 0.265, 1.55)

// pong contact form spinner
main-spinner-shadow = inset mojo-green 0 0 0 0, inset mojo-green 0 -40px 0 0, inset mojo-green -3px 0 0 0, inset #fff -10px 0 0 0
