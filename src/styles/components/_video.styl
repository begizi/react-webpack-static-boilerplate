.media-video
  margin: spacing-block-large auto

  @media(max-width: small-screen)
    margin: spacing-block * 2 auto

.video-wrap
  position: relative

.video-crop
  height: 500px
  
.video-full-bleed
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  
  video
    min-width: 100%
    min-height: 100%
    position: absolute
    left: 0
    top: 0

.content
  video
    max-width: 100%
    display: block
