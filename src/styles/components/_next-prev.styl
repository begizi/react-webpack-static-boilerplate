.nav-next-prev
  @media (max-width: med-screen-portrait)
    margin: 0 spacing-block spacing-block * 2 spacing-block

.nav-next,
.nav-prev
  height: 40px
  line-height: 36px
  border: 1px solid #fff
  border-left: 0
  padding: 0 20px
  position: absolute
  top: 50%
  margin-top: -20px
  color: white
  z-index: 10
  font-family: primary-sans
  transition: all .3s ease

  @media (max-width: med-screen-portrait)
    width: col-1-2
    border: 1px solid #fff
    position: relative
    top: auto
    left: auto
    right: auto
    margin-top: 0
    display: inline-block
    text-align: center

  &:hover
    cursor: pointer
    padding-left: 18px
    background: white
    color: mojo-green

.nav-next
  right: 0
  border-left: 1px solid #fff
  border-right: 0

  @media (max-width: med-screen-portrait)
    border-right: 1px solid #fff
    border-left: 0

  &:hover
    padding-left: 20px
    padding-right: 18px
