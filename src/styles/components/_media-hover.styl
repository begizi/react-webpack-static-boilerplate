.media-display-item
  color: #fff
  width: col-1-4
  float: left
  padding-bottom: 25%
  position: relative
  background-size: auto 100%
  background-repeat: no-repeat
  background-position: center
  transition: all .3s ease
  border: none

  @media (max-width: med-screen-portrait)
    width: col-1-2
    padding-bottom: 50%
    
  &.social
    width: col-1-2
    padding-bottom: 50%
    
    @media (min-width: med-screen-landscape)
      width: col-1-4
      padding-bottom: 25%

  .media-display-item-wrap
    opacity: 0
    padding: spacing-block * 3
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    transition: all .3s ease

    @media (max-width: small-screen)
      display: none

    &:after
      content: ''
      background: rgba(mojo-green, .9)
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0
      margin: 0
      z-index: 1
      transition: all .3s ease

  .media-display-item-cta
    position: absolute
    width: 100%
    height: 100%
    top: 0
    left: 0
    padding: spacing-block * 3
    font-family: primary-sans
    z-index: 2
    transform: scale(.9)
    text-align: center
    display: table
    transition: all .3s ease

    .small-headline
      display: table-cell
      border: none
      vertical-align: middle
      color: #fff
  
  .social-text
    position: absolute
    bottom: 0
    left: 0
    padding: spacing-block * 3
    font-family: primary-sans
    font-size: 18px
    line-height: 28px
    z-index: 2
    transform: scale(.9)
    transition: all .3s ease
    
    @media (min-width: med-screen-landscape)
      font-size: 12px
      line-height: 18px

    @media (min-width: max-width)
      font-size: 18px
      line-height: 28px

  .social-handle
    font-family: primary-sans
    font-size: 12px
    letter-spacing: .0325em
    text-transform: uppercase
    font-weight: bold
    line-height: normal
    color: rgba(white, .5)
    position: relative
    z-index: 2

  &:hover
    cursor: pointer
    background-size: auto 120%

    .media-display-item-wrap
      opacity: 1

      &:after
        margin: spacing-block

    .media-display-item-cta,
    .social-text
      transform: scale(1)
