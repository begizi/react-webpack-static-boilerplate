.modal
  background: mojo-green
  margin: -(spacing-block-large) 0
  padding-top: spacing-block-large
  overflow: hidden

  .header
    display: none
    
  .modal-header
    margin-bottom: 0

  .page-contents
    overflow: hidden
    visibility: hidden
    opacity: 0

  &.contact-form
    .page-contents
      overflow: auto
      visibility: visible
      opacity: 1

.modal-header
  margin: spacing-block-large auto
  padding: 0 spacing-block-large
  height: header-height
  max-width: max-width
  overflow: hidden
  color: #fff

  @media (max-width: med-screen-portrait)
    padding: 0 spacing-block * 2

  @media (max-width: small-screen)
    padding: 0 spacing-block
    margin: 0 auto spacing-block auto

.close-modal
  float: right
  margin-top: 18px
  position: relative
  z-index: 22
  background: mojo-green
  border-radius: 50%
  padding: spacing-block-small
  top: -10px
  right: -10px

  .close-btn
    width: 24px
    height: 4px
    margin: 10px 0
    background: none
    border-radius: 4px
    transition: cubic-bezier

    &:before,
    &:after
      width: 24px
      height: 4px
      background: mojo-green
      border-radius: 4px
      transition: cubic-bezier
      background: darken(mojo-green, 20%)

  &:hover
    cursor: pointer

    .close-btn
      transform: scale(1.2)
