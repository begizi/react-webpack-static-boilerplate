.our-strengths
  margin: spacing-block-large 0 spacing-block * 3 0
  padding-top: spacing-block * 3
  border-top: 1px solid light-gray

  @media (max-width: small-screen)
    margin: spacing-block * 2 0 spacing-block-small 0
    padding-top: spacing-block * 2

  ul
    margin-bottom: spacing-block * 2
    list-style: none
    padding-left: 0

    @media(max-width: small-screen)
      margin-bottom: spacing-block

  li
    margin-bottom: spacing-block-small
    color: mojo-green

    span
      color: med-gray

  .offerings
    padding-top: spacing-block * 2

    @media(max-width: small-screen)
      padding-top: 0

  .col
    width: col-1-3
    text-align: center
    padding: 0 spacing-block

    @media(max-width: 850px)
      width: 100%
      float: none
