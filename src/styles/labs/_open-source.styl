.open-source-projects
  margin-top: spacing-block-large
  
  @media(max-width: small-screen)
    margin-top: spacing-block * 2

.open-source-project
  display: inline-block
  clear: both
  vertical-align: top
  padding-bottom: spacing-block * 2
  margin-bottom: spacing-block * 2
  border-bottom: 1px solid light-gray
  
  &:last-child
    margin-bottom: 0
    padding-bottom: 0
    border-bottom: none
  
  p
    margin-bottom: spacing-block
  
  .project-icon
    width: 60px
    height: 60px
    line-height: 60px
    margin-bottom: spacing-block
    float: left
    text-align: center
    
    @media(max-width: small-screen)
      float: none
    
    img
      margin: 0
      max-height: 60px
      width: auto
      display: inline-block
      vertical-align: middle
      
  .project-title,
  .project-description
  .button
    margin-left: spacing-block * 4
    
    @media(max-width: small-screen)
      margin-left: 0
