.work-together,
.contact-cta,
.jobs-cta,
.labs-cta
  padding: spacing-block * 2 0
  border-top: 1px solid light-gray
  background: #fff

  @media (max-width: small-screen)
    text-align: center
    padding: spacing-block 0

.labs-cta
  border-top: none
  border-bottom: 1px solid light-gray

.cta-block
  position: relative

  .cta-title
    margin: 0 200px 0 0
    color: darken(med-gray, 40%)

    @media(max-width: small-screen)
      margin: 0

  .cta-desc
    margin-right: 200px

    @media(max-width: small-screen)
      margin: 0

  .button
    position: absolute
    top: 50%
    right: 0
    margin-top: -(spacing-block)

    @media (max-width: small-screen)
      position: relative
      top: auto
      right: auto
      margin-top: spacing-block-small
