.key-metric-headline
  margin-top: spacing-block-large

  @media (max-width: small-screen)
    margin: spacing-block * 2 0 0 0

  h2
    @media (max-width: small-screen)
      margin-bottom: 0

.key-metrics
  font-family: primary-sans
  text-align: center
  margin: spacing-block-large 0
  
  @media (max-width: small-screen)
    margin: 0

.key-metric
  padding: spacing-block * 2 spacing-block
  display: inline-block
  min-width: col-1-3
  border-right: 1px solid light-gray
  position: relative
  
  @media(max-width: med-screen-landscape)
    min-width: 100%
    border-right: none
    border-bottom: 1px solid light-gray

  &:last-child
    border: none

  .key-metric-value
    font-size: 58px
    line-height: 68px
    letter-spacing: -.065em

    @media(max-width: max-width)
      font-size: 48px
      line-height: 58px

    @media (max-width: small-screen)
      font-size: 44px
      line-height: 54px

  .key-metric-label
    font-size: 12px
    letter-spacing: .0325em
    text-transform: uppercase
    font-weight: bold
    line-height: normal
    color: darken(light-gray, 15%)
    position: absolute
    left: 0
    width: 100%
    text-align: center
    padding: 0 spacing-block

    @media(max-width: med-screen-landscape)
      position: relative
      left: auto
      padding: 0
      width: auto
