.modal
  .employee-details-wrap
    visibility: visible
    opacity: 1
    overflow-y: scroll
    -webkit-overflow-scrolling: touch

  .body-content
    background-color: mojo-green

.transitioning
  .employee-details
    animation: fadeIn .3s ease

.employee-details-wrap
  background-color: mojo-green
  background-size: cover
  background-position: top center
  background-repeat: no-repeat
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1
  overflow: hidden
  opacity: 0
  visibility: hidden
  transition: all .3s ease

  .employee-name,
  .employee-title,
  .employee-bio
    color: #fff

.employee-details
  position: relative
  z-index: 3
  padding: spacing-block-large 0

  @media(max-width: med-screen-portrait)
    padding-top: spacing-block * 2
    padding-bottom: spacing-block * 3

.employee-bio
  margin-top: spacing-block * 2
  
  p
    margin: 0
