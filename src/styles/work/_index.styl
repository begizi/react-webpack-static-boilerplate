.work-united-way
  .content
    padding-top: 0

  .uw-video-leo
    padding: spacing-block-large 0
    position: relative

    @media(max-width: small-screen)
      padding-bottom: spacing-block * 2

    &:after
      content: ''
      width: 100%
      height: 451px
      position: absolute
      top: 20px
      left: 0
      background-image: url('https://mojotech-static.s3.amazonaws.com/m4/work/united-way/uw-video-bg.png')
      background-position: top
      background-repeat: no-repeat
      background-size: cover
      z-index: 1

    .inner
      @media(max-width: med-screen-landscape)
        max-width: 100%
        padding: 0

  .media-video
    margin: 0
    padding: spacing-block-large 0
    background-color: #2e2e40

    @media(max-width: med-screen-portrait)
      padding: spacing-block-large spacing-block * 2

    @media(max-width: small-screen)
      padding-bottom: spacing-block * 2

    .col-center
      position: relative
      z-index: 2

    iframe
      box-shadow: 0 0 24px rgba(black, .5)

  .work-content
    padding-bottom: spacing-block * 3

    @media(max-width: small-screen)
      padding-bottom: spacing-block

  .callout-block
    background-image: url('https://mojotech-static.s3.amazonaws.com/m4/callout-blocks/whiteboard-artboard-4.png')

  .branded-section
    padding-top: spacing-block-large
    background-color: uw-primary

    @media(max-with: small-screen)
      padding: spacing-block * 2 0

    .intro-copy
      color: #fff

      a
        color: #fff
        border-color: #fff

      &:after
        display: none

  .uw-laptop
    background-image: url('https://mojotech-static.s3.amazonaws.com/m4/work/united-way/sketch-art-bg.jpg')
    background-size: cover
    background-repeat: no-repeat
    background-position: center

    img
      margin-bottom: 0

.browser
  background: linear-gradient(180deg, light-gray, light-gray browser-height, light-gray browser-height, light-gray)
  border-radius: 4px 4px 0 0
  display: inline-block
  max-width: 100%
  padding: browser-height 0 0
  margin: spacing-block-large 0
  position: relative
  border: 1px solid light-gray

  @media(max-width: small-screen)
    margin: spacing-block * 2 0

  &:before
    color: lighten(med-gray, 40%)
    content: '\00B7\00B7\00B7'
    font-size: 40px
    left: 6px
    letter-spacing: -3px
    line-height: 0
    position: absolute
    top: (browser-height/2.6)
  img
    margin: 0 auto

.groove-devices
  background: #67c8ca
  color: white
  margin: spacing-block-large 0
  overflow: hidden
  padding: spacing-block-large 0 0
  position: relative

  @media(max-width: small-screen)
    margin: spacing-block * 2 0
    padding: spacing-block * 2 0 0

  .device-wrapper
    margin: 60px auto 0
    max-width: 910px
    position: relative

    @media(max-width: small-screen)
      margin-top: spacing-block * 2

  .groove-device
    bottom: 0
    margin: 0
    transition: transform .5s linear

  .groove-phone
    left: -6%
    max-width: 36.8%
    position: absolute

    @media(max-width: med-screen-portrait)
      z-index: 20

    &.animate
      transform: translate(-40%, 0)

  .groove-browser
    left: 0
    position: relative
    z-index: 10

  .groove-tablet
    right: -6%
    position: absolute
    max-width: 57.1%

    @media(max-width: med-screen-portrait)
      z-index: 20

    &.animate
      transform: translate(25%, 0)

